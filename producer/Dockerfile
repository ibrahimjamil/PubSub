FROM node:latest

ARG AWS_ACCESS_KEY
ARG AWS_SECRET_KEY
ARG SNS_TOPIC
ARG SQS_URL
ARG AWS_REGION

ENV AWS_ACCESS_KEY=${AWS_ACCESS_KEY}
ENV AWS_SECRET_KEY=${AWS_SECRET_KEY}
ENV SNS_TOPIC=${SNS_TOPIC}
ENV SQS_URL=${SQS_URL}
ENV AWS_REGION=${AWS_REGION}

WORKDIR /app

COPY package.json ./

RUN npm install

COPY . .

CMD ["node", "index.js"]
